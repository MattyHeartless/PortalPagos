
@{
    ViewBag.Title = "Index";
}
<style>
    .caliz {
        color: #ffffff;
        margin-right: 5px;
        font-size: 18px;
        font-weight: 600;
        position: absolute;
        left: 0;
        top: 0;
    }
    }
</style>
<section class="credit-card-area bg-ffffff">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="credit-card-content">
                    <span>Bienvenido @Session["Nombre"].ToString()</span>
                    <h3>Plan de servicio de internet de 30 Mbs velocidad</h3>
                    <p>Te mostramos los últimos detalles de tu servicio de internet </p>

                    <ul class="credit-card-features">
                        <li>
                            <i class="fa-solid fa-circle-dollar-to-slot caliz"></i> Saldo
                        </li>
                        <li style="font-weight:bold;">
                            <i class="flaticon-checkmark"></i> $0.00
                        </li>
                        <li >
                            <i class="fa-regular fa-calendar-xmark caliz"></i> Último día para pago
                        </li>
                        <li style="font-weight:bold;">
                            <i class="flaticon-checkmark"></i> 15 de agosto de 2023
                        </li>
                        <li>
                            <i class="fa-solid fa-tower-broadcast caliz"></i> Estado del servicio
                        </li>
                        <li style="font-weight:bold;">
                            <i class="flaticon-checkmark"></i> Activo
                        </li>
                        <li>
                            <i class="fa-solid fa-headset caliz"></i> Tickets abiertos
                        </li>
                        <li style="font-weight:bold;">
                            <i class="flaticon-checkmark"></i> 2
                        </li>
                        <li>
                            <i class="fa-solid fa-toolbox caliz"></i> Siguiente visita de mantenimiento
                        </li>
                        <li style="font-weight:bold;">
                            <i class="flaticon-checkmark"></i> 10 de agosto de 2023
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-5">
               
                <div class="credit-card-image-slider owl-carousel owl-theme owl-loaded owl-drag">


            <div class="owl-stage-outer">
                <div class="owl-stage">
                    <div class="owl-item cloned">
                        <div class="credit-card-image">
                            <img src="~/Content/antena.svg" />
                        </div>
                    </div><div class="owl-item cloned" >
                              <div class="credit-card-image">
                                  <img src="~/Content/marks.svg" style="margin-top:20%;"/>
                              </div>
                    </div><div class="owl-item">
                              <div class="credit-card-image">
                                  <img src="~/Content/services.svg" style="margin-top:20%;"/>
                              </div>
                    </div><div class="owl-item active">
                              <div class="credit-card-image">
                                  <img src="~/Content/speedtest.svg" style="margin-top:20%;"/>
                              </div>
                    </div>
                </div>
            </div>
        </div>
            </div>
        </div>
    </div>
</section>